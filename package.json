{
  "name": "@appliedblockchain/helpers",
  "version": "4.1.0",
  "description": "No dependency, single file helpers.",
  "main": "index.js",
  "scripts": {
    "doc": "npx documentation readme --section=Api *.js",
    "test": "eslint . && flow check && jest",
    "patch": "npm test && npm version patch && git push && git push --tags && npm publish",
    "minor": "npm test && npm version minor && git push && git push --tags && npm publish"
  },
  "keywords": [],
  "author": "Mirek Rusin",
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules",
      "wip"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.1.0",
    "eslint": "6.7.2",
    "flow-bin": "0.113.0",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "extends": "@appliedblockchain",
    "rules": {
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ]
    },
    "globals": {
      "BigInt": true
    }
  },
  "eslintIgnore": [
    "flow-typed/*",
    "wip/*",
    "docs/*"
  ]
}
